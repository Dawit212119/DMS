generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider = "zod-prisma-types"
  output = "../zod"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  email      String   @unique
  password   String
  isVarified Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  projects   Project[]
 
}
model UserVerification{
  id        String    @id  @default(auto())  @map("_id") @db.ObjectId
  userId    String   
  uniqueString String
  createdAt  DateTime  @default(now())
  expiresAt  DateTime  
}
model ResetPassword{
  id        String    @id  @default(auto())  @map("_id") @db.ObjectId
  userId    String   
  resetString String
  createdAt  DateTime  @default(now())
  expiresAt  DateTime  
}
model Project {
  id                     String   @id @default(auto()) @map("_id") @db.ObjectId
  projectName            String
  clientName             String
  location               String
  startDate              DateTime
  endDate                DateTime
  userId                 String  @db.ObjectId @unique
  user User @relation(fields: [userId],references: [id])
  budget                 Budget?
  team                   Team?
  milestones             Milestone[]
  checklist              ChecklistItem[]
  documents              Document[]
  outgoingLetters        OutgoingLetter[]
  incomingLetters        IncomingLetter[]
  reports                Report[]
  siteImages             SiteImage[]
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt
}

model Budget {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  total     Float
  spent     Float
  project   Project  @relation(fields: [projectId], references: [id])
  projectId String   @db.ObjectId @unique

}

model Team {
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  projectManager      String
  siteManager         String
  civilManager        String
  architecturalLead   String
  totalWorkers        Int
  project             Project  @relation(fields: [projectId], references: [id])
  projectId           String   @db.ObjectId @unique
  
}

model Milestone {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  date       DateTime
  status     Status
  project    Project  @relation(fields: [projectId], references: [id])
  projectId  String   @db.ObjectId
  @@index([projectId])
}

enum Status {
  ontrack
  atrisk
}

model ChecklistItem {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  task         String
  assignedTo   String
  dueDate      DateTime
  status       Status
  priority     Priority
  milestoneId  String
  project      Project  @relation(fields: [projectId], references: [id])
  projectId    String   @db.ObjectId
  @@index([projectId])
}

enum Priority {
  high
  medium
  low
}

model Document {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  title         String
  fileUrl       String
  fileName      String
  date          DateTime @default(now())
  project       Project  @relation(fields: [projectId], references: [id])
  projectId     String   @db.ObjectId
  @@index([projectId])
}

model SiteImage {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  location    String
  category    Category
  imageUrl    String
  fileName    String
  date        DateTime @default(now())
  project     Project  @relation(fields: [projectId], references: [id])
  projectId   String   @db.ObjectId
  @@index([projectId])
}

enum Category {
  foundation
  structural
  electrical
  plumbing
  exterior
  aerial
}

model OutgoingLetter {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  recipient   String
  subject     String
  priority    Priority
  status      OutgoingStatus
  fileUrl     String
  fileName    String
  createdAt   DateTime @default(now())
  project     Project  @relation(fields: [projectId], references: [id])
  projectId   String   @db.ObjectId
  @@index([projectId])
}

enum OutgoingStatus {
  draft
  sent
}

model IncomingLetter {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  sender      String
  subject     String
  priority    Priority
  status      IncomingStatus
  fileUrl     String
  fileName    String
  createdAt   DateTime @default(now())
  project     Project  @relation(fields: [projectId], references: [id])
  projectId   String   @db.ObjectId
  @@index([projectId])
}

enum IncomingStatus {
  read
  unread
}

model Report {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  title         String
  publisher     String
  reportType    ReportType
  version       String
  status        ReportStatus
  fileUrl       String
  fileName      String
  uploadedDate  DateTime @default(now())
  project       Project  @relation(fields: [projectId], references: [id])
  projectId     String   @db.ObjectId
  @@index([projectId])
}

enum ReportStatus {
  approved
  rejected
}

enum ReportType {
  daily
  weekly
  monthly
  quarterly
  annually
}
